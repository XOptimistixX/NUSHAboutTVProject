<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
        android:layout_width="@dimen/timeline_line_circle_width"
        android:layout_height="match_parent">
        <View
            android:id="@+id/connector_start"
            android:layout_width="@dimen/timeline_line_width"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/timeline_circle"
            android:layout_marginBottom="@dimen/timeline_half_circle_width"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <ImageView
            android:id="@+id/timeline_circle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/timeline_margin_top_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/timeline_circle"/>
        <View
            android:id="@+id/connector_end"
            android:layout_width="@dimen/timeline_line_width"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/timeline_margin_top_line"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_timeline_title"
            android:textSize="24sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/timeline_margin_top_circle"
            android:layout_marginBottom="16dp"
            android:layout_height="wrap_content"
            android:text="Random title"
            android:gravity="center_vertical"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/item_timeline_content"
            android:paddingRight="32dp"
            android:textSize="@dimen/text_size_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.5"
            android:text="Content"></TextView>
    </LinearLayout>

</LinearLayout>