<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="2dp"
    app:cardCornerRadius="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/teachers"/>

            <TextView
                android:layout_alignParentBottom="true"
                android:padding="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="From left to right: Mrs Phylliscia Lee, Mr Claude Chua, Mr Ng Chee Loong, Mr Li Da; 2016"
                android:background="#7F000000"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="32dp"
            android:text="Department of Computing"
            android:textSize="24sp"
            android:textColor="@android:color/black"/>

        <TextView
            android:padding="32dp"
            android:lineSpacingMultiplier="1.5"
            android:textSize="@dimen/text_size_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/department_information"/>

    </LinearLayout>
</android.support.v7.widget.CardView>